{
    "name": "webregul/lumen-form-request",
    "description": "Adopt the Laravel Form Request to Lumen framework.",
    "keywords": [
        "lumen",
        "request",
        "validate"
    ],
    "homepage": "https://github.com/webregul/lumen-form-request",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Andriyanov",
            "email": "x2e8@yandex.ru"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/auth": "^10.0",
        "illuminate/console": "^10.0",
        "illuminate/container": "^10.0",
        "illuminate/contracts": "^10.0",
        "illuminate/http": "^10.0",
        "illuminate/support": "^10.0",
        "illuminate/translation": "^10.0",
        "illuminate/validation": "^10.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^8.4|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Illuminate\\Foundation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Illuminate\\Foundation\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
